## packages required to run ermine
group("ermine") {
  testonly = true
  public_deps = [
    ":ermine_config",
    "ermine:ermine",
    "ermine:ermine_ask_module",
    "//topaz/packages/prod:bluetooth_settings",
    "//topaz/packages/prod:chromium",
    "//topaz/packages/prod:dart_jit_product_runner",
    "//topaz/packages/prod:dart_jit_runner",
    "//topaz/packages/prod:datetime_settings",
    "//topaz/packages/prod:display_settings",
    "//topaz/packages/prod:settings",
    "//topaz/packages/prod:story_shell_labs",
    "//topaz/packages/prod:userpicker_base_shell",
    "//topaz/packages/prod:wifi_settings",
  ]
}

group("ermine_config") {
  testonly = true
  public_deps = [
    ":ermine_required",
    "ermine:ermine_modular_config",
  ]
}

group("ermine_required") {
  testonly = true
  public_deps = [
    "ermine:ermine_fonts",
  ]
}

group("dart_unittests") {
  testonly = true

  deps = [
    "ermine:ermine_unittests($host_toolchain)",
  ]
}
