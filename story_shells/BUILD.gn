group("story_shells") {
  testonly = true
  public_deps = [
    "mondrian",
  ]
}

group("dart_unittests") {
  testonly = true

  # TODO(fxb/41505): Temporarily disable flutter_tester tests on mac hosts.
  _flutter_tester_tests = []
  if (host_os != "mac") {
    _flutter_tester_tests +=
        [ "mondrian:mondrian_story_shell_tests($host_toolchain)" ]
  }

  deps = _flutter_tester_tests
}
