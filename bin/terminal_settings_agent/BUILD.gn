import("//build/package.gni")
import("//build/rust/rustc_binary.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

group("tests") {
  testonly = true
  public_deps = [
    ":terminal_settings_agent_tests",
  ]
}

rustc_binary("bin") {
  name = "terminal_settings_agent"
  edition = "2018"
  with_unit_tests = true

  with_lto = "fat"

  deps = [
    "//garnet/lib/rust/io_util",
    "//garnet/public/lib/fidl/rust/fidl",
    "//garnet/public/rust/fuchsia-async",
    "//garnet/public/rust/fuchsia-component",
    "//garnet/public/rust/fuchsia-syslog",
    "//garnet/public/rust/fuchsia-zircon",
    "//sdk/fidl/fuchsia.terminal:fuchsia.terminal-rustc",
    "//sdk/fidl/fuchsia.ui.types:fuchsia.ui.types-rustc",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:thiserror",
    "//zircon/system/fidl/fuchsia-io:fuchsia-io-rustc",
  ]
}

package("terminal_settings_agent") {
  meta = [
    {
      path = rebase_path("meta/terminal_settings_agent.cmx")
      dest = "terminal_settings_agent.cmx"
    },
  ]

  deps = [
    ":bin",
  ]

  binary = "terminal_settings_agent"
}

test_package("terminal_settings_agent_tests") {
  deps = [
    ":bin_test",
  ]

  tests = [
    {
      name = "terminal_settings_agent_bin_test"
      environments = basic_envs
    },
  ]
}
