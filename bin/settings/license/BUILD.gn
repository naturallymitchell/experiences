import("//build/components.gni")
import("//build/dart/dart_library.gni")
import("//build/flutter/flutter_component.gni")

dart_library("lib") {
  package_name = "license_settings"
  null_safe = true
  sources = [
    "main.dart",
    "src/license.dart",
  ]
  deps = [
    "//sdk/dart/fuchsia_logger",
    "//sdk/dart/fuchsia_webview_flutter",
    "//src/experiences/lib/ermine_localhost:ermine_localhost",
    "//src/experiences/session_shells/ermine/internationalization",
    "//third_party/dart-pkg/git/flutter/packages/flutter",
    "//third_party/dart-pkg/pub/webview_flutter",
  ]
}

resource("license-text") {
  sources = [ "assets/license.html" ]
  outputs = [ "data/license.html" ]
}

flutter_component("component") {
  main_dart = "main.dart"
  component_name = "license_settings"
  manifest = "meta/license_settings.cmx"
  deps = [
    ":lib",
    ":license-text",
  ]
}

fuchsia_package("license_settings") {
  deps = [ ":component" ]
}
